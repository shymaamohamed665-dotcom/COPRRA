# ============================================================================
# COPRRA Configuration
# ============================================================================
# Advanced Price Comparison Platform Settings

# COPRRA Application Settings
COPRRA_NAME=COPRRA
COPRRA_DEFAULT_CURRENCY=USD
COPRRA_DEFAULT_LANGUAGE=en
COPRRA_DEFAULT_CONDITION=new
COPRRA_MAX_PRICE_RANGE=10000
