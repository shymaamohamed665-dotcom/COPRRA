# Price Comparison Settings
PRICE_CACHE_DURATION=3600
MAX_STORES_PER_PRODUCT=10
PRICE_UPDATE_INTERVAL=6

# Search and Filtering Settings
SEARCH_MAX_RESULTS=50
SEARCH_MIN_QUERY_LENGTH=2
SEARCH_ENABLE_AUTOCOMPLETE=true

# API Configuration
API_RATE_LIMIT=100
API_VERSION=v1
API_ENABLE_DOCS=true

# Exchange Rates (Base: USD = 1.0)
EXCHANGE_RATE_USD=1.0
EXCHANGE_RATE_EUR=0.85
EXCHANGE_RATE_GBP=0.73
EXCHANGE_RATE_JPY=110.0
EXCHANGE_RATE_SAR=3.75
EXCHANGE_RATE_AED=3.67
EXCHANGE_RATE_EGP=30.9

# Pagination and Limits
DEFAULT_ITEMS_PER_PAGE=20
MAX_WISHLIST_ITEMS=100
MAX_PRICE_ALERTS=50

# Image and Media Settings
MAX_IMAGE_SIZE=2048
# Allowed image types: jpg, jpeg, png, webp (defined in config)

# Analytics and Tracking
GOOGLE_ANALYTICS_ID=
TRACK_USER_BEHAVIOR=true
TRACK_PRICE_CLICKS=true

# Security Settings
ENABLE_2FA=false
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=120

# Performance Settings
ENABLE_QUERY_CACHING=true
ENABLE_VIEW_CACHING=true
ENABLE_COMPRESSION=true

