# ===================================================================
#  MANDATORY RULES TO FIX 23GB SIZE ISSUE
# ===================================================================
# Ignore entire directories for dependencies and storage.
# This is the most important section.
/vendor
/node_modules
/storage
# Exception: Track API documentation
!storage/api-docs/
!storage/api-docs/api-docs.json
/build

# ===================================================================
#  Laravel Framework Defaults
# ===================================================================
# Ignore environment files, but keep examples.
.env
.env.*
!.env.example
!.env.testing

# Ignore compiled assets and public links.
/public/build
/public/hot
/public/storage

# ===================================================================
#  Logs, Caches, and System Files
# ===================================================================
# Logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Caches and IDE files
.idea/
.vscode/
.phpunit.cache/
*.cache
.php-cs-fixer.cache
tmp/

# OS Generated Files
.DS_Store
Thumbs.db
ehthumbs.db

# ===================================================================
#  Sensitive Information & Security
# ===================================================================
# Credentials and secrets
*.pem
*.key
*.crt
*.p12
*.pfx
secrets.json
credentials.json
auth.json

# Secrets directories
secrets/
.secrets/

# ===================================================================
#  Other General Ignores
# ===================================================================
# Backup files
*.bak
*.backup
*.old

# Temporary files
*.tmp
*.temp
*.swp

# Database files
*.sqlite
*.db

# Coverage reports
coverage/
.coverage
NUL
@php
IlluminateFoundation*
/\.env\.docker

# ===================================================================
#  Repository Hygiene (Redundant/Temporary Directories)
# ===================================================================
# Release directory (redundant copy of entire codebase)
/release/

# Backup directories (should not be in version control)
/backups/
release/
backups/
storage/reports/
*.out
actionlint
*_report.txt
*_output.txt
audit-*.txt
phpstan_*.txt
psalm_*.txt
coverage_*.txt
test_*.php
temp_*.php
coprra-release.zip
