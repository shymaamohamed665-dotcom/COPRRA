# ===================================================================
#  MANDATORY RULES TO FIX 23GB SIZE ISSUE
# ===================================================================
# Ignore entire directories for dependencies and storage.
# This is the most important section.
/vendor
/node_modules
/storage
/build

# ===================================================================
#  Laravel Framework Defaults
# ===================================================================
# Ignore environment files, but keep examples.
.env
.env.*
!.env.example
!.env.testing

# Ignore compiled assets and public links.
/public/build
/public/hot
/public/storage

# ===================================================================
#  Logs, Caches, and System Files
# ===================================================================
# Logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Caches and IDE files
.idea/
.vscode/
.phpunit.cache/
*.cache
.php-cs-fixer.cache

# OS Generated Files
.DS_Store
Thumbs.db
ehthumbs.db

# ===================================================================
#  Sensitive Information & Security
# ===================================================================
# Credentials and secrets
*.pem
*.key
*.crt
*.p12
*.pfx
secrets.json
credentials.json
auth.json

# ===================================================================
#  Other General Ignores
# ===================================================================
# Backup files
*.bak
*.backup
*.old

# Temporary files
*.tmp
*.temp
*.swp

# Database files
*.sqlite
*.db

# Coverage reports
coverage/
.coverage
