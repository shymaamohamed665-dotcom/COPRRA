<?xml version="1.0"?>
<ruleset name="Custom Naming Rules"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd">

    <description>Customized PHPMD naming rules aligned with project conventions.</description>

    <!-- Allow common short variables used in the project and set minimum length -->
    <rule ref="rulesets/naming.xml/ShortVariable">
        <properties>
            <property name="minimum" value="2"/>
            <property name="exceptions" value="a,b,c,d,e,f,g,h,i,j,k,l,m,n,o,p,q,r,s,t,u,v,w,x,y,z,id,ip,db,os,fp,to"/>
        </properties>
    </rule>

    <!-- Increase maximum variable name length to accommodate descriptive names -->
    <rule ref="rulesets/naming.xml/LongVariable">
        <properties>
            <property name="maximum" value="40"/>
        </properties>
    </rule>

</ruleset>