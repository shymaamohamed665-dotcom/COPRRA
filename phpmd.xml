<?xml version="1.0"?>
<ruleset name="Laravel Pragmatic Rules"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd">

    <description>PHPMD ruleset tuned for pragmatic Laravel projects to reduce noise and focus on actionable issues.</description>

    <!-- Clean Code: keep useful checks, skip rules that conflict with Laravel idioms -->
    <rule ref="rulesets/cleancode.xml/BooleanArgumentFlag"/>
    <rule ref="rulesets/cleancode.xml/DuplicatedArrayKey"/>
    <rule ref="rulesets/cleancode.xml/ErrorControlOperator"/>
    <rule ref="rulesets/cleancode.xml/MissingImport">
        <properties>
            <property name="ignore-global" value="true"/>
        </properties>
    </rule>
    <rule ref="rulesets/cleancode.xml/UndefinedVariable"/>

    <!-- Unused code rules: useful to catch dead code -->
    <rule ref="rulesets/unusedcode.xml"/>

    <!-- Design rules: include with a relaxed coupling threshold -->
    <rule ref="rulesets/design.xml/CouplingBetweenObjects">
        <properties>
            <property name="maximum" value="22"/>
        </properties>
    </rule>
    <rule ref="rulesets/design.xml"/>

    <!-- Naming: relax short variable length to reduce noise in small scopes -->
    <rule ref="rulesets/naming.xml/ShortVariable">
        <properties>
            <property name="minimum" value="2"/>
            <property name="exceptions" value="i,j,k,x,y,z,id,ok"/>
        </properties>
    </rule>
    <rule ref="rulesets/naming.xml/ShortMethodName">
        <properties>
            <property name="minimum" value="2"/>
        </properties>
    </rule>

    <!-- Code size: set pragmatic thresholds to focus on truly hot spots -->
    <rule ref="rulesets/codesize.xml/CyclomaticComplexity">
        <properties>
            <property name="reportLevel" value="30"/>
        </properties>
    </rule>
    <rule ref="rulesets/codesize.xml/NPathComplexity">
        <properties>
            <property name="minimum" value="1000"/>
        </properties>
    </rule>
    <rule ref="rulesets/codesize.xml/ExcessiveMethodLength">
        <properties>
            <property name="minimum" value="180"/>
        </properties>
    </rule>
    <rule ref="rulesets/codesize.xml/ExcessiveClassComplexity">
        <properties>
            <property name="maximum" value="95"/>
        </properties>
    </rule>
    <rule ref="rulesets/codesize.xml/TooManyPublicMethods">
        <properties>
            <property name="maxmethods" value="22"/>
            <property name="ignorepattern" value="(^(set|get|is|has|with))i"/>
        </properties>
    </rule>

</ruleset>
