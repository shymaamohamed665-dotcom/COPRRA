APP_NAME=Laravel
APP_ENV=local
APP_KEY=
# Local development defaults
APP_DEBUG=true
APP_URL=http://localhost

# CDN configuration
# Set ASSET_URL to your CDN base to serve assets via CDN
ASSET_URL=
# Single primary CDN URL; used as fallback if ASSET_URL not set
CDN_URL=
# Optional: multiple CDN base URLs (comma-separated) for failover/rotation
CDN_URLS=
# Toggle CDN asset delivery helper logic (reserved for future use)
CDN_ENABLED=false
# Failover attempt flag if primary is unreachable
CDN_FAILOVER=true
# Timeout for CDN health checks in milliseconds
CDN_TIMEOUT_MS=500

# CORS configuration
# Comma-separated list of allowed origins. Example:
#   http://localhost:5173,http://127.0.0.1:5173,https://frontend.example.com
CORS_ALLOWED_ORIGINS=

# Comma-separated HTTP methods allowed for CORS requests.
# Defaults to REST methods and OPTIONS for preflight
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS

# Comma-separated list of request headers allowed
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-Requested-With,X-CSRF-TOKEN

# Comma-separated list of response headers exposed to the browser
CORS_EXPOSED_HEADERS=

# Seconds to cache preflight responses
CORS_MAX_AGE=600

# Whether to send cookies/authorization headers on cross-origin requests
# Enable only if required (e.g., Sanctum SPA auth)
CORS_SUPPORTS_CREDENTIALS=true

# Frontend URL for production if different from APP_URL
FRONTEND_URL=

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
# Local-safe defaults to avoid Redis dependency
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

REQUIRE_2FA=true

